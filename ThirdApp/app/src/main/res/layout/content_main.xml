<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:text="Личные данные"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/userNameContainer"
            style="@style/style_textInputLayout"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_title">

            <android.support.design.widget.TextInputEditText xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/user_name"
                style="@style/style_textInputEdit"
                android:hint="Имя" />

        </android.support.design.widget.TextInputLayout>

        <include
            android:id="@+id/userNameEdit"
            layout="@layout/imagebutton_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/userNameContainer" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/userSurnameContainer"
            style="@style/style_textInputLayout"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userNameContainer">

            <android.support.design.widget.TextInputEditText xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/user_surname"
                style="@style/style_textInputEdit"
                android:hint="Фамилия" />

        </android.support.design.widget.TextInputLayout>

        <include
            android:id="@+id/userSurnameEdit"
            layout="@layout/imagebutton_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/userSurnameContainer" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/userEmailContainer"
            style="@style/style_textInputLayout"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userSurnameContainer">

            <android.support.design.widget.TextInputEditText xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/user_email"
                style="@style/style_textInputEdit"
                android:hint="E-mail"
                android:inputType="textEmailAddress" />

        </android.support.design.widget.TextInputLayout>

        <include
            android:id="@+id/userEmailEdit"
            layout="@layout/imagebutton_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/userEmailContainer" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/userLoginContainer"
            style="@style/style_textInputLayout"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userEmailContainer">

            <android.support.design.widget.TextInputEditText xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/user_login"
                style="@style/style_textInputEdit"
                android:hint="Логин" />

        </android.support.design.widget.TextInputLayout>

        <include
            android:id="@+id/userLoginEdit"
            layout="@layout/imagebutton_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/userLoginContainer" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/userRegionContainer"
            style="@style/style_textInputLayout"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userLoginContainer">

            <android.support.design.widget.TextInputEditText xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/user_region"
                style="@style/style_textInputEdit"
                android:hint="Ваш регион" />

        </android.support.design.widget.TextInputLayout>

        <include
            android:id="@+id/userRegionEdit"
            layout="@layout/imagebutton_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/userRegionContainer" />

        <TextView
            android:id="@+id/textView_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_menu_exit"
            android:drawablePadding="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="@string/user_exit"
            android:textColor="#414141"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userRegionContainer"
            android:background="?attr/selectableItemBackground"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>